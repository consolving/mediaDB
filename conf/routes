# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           		controllers.Application.index()
GET     /media/files                		controllers.MediaFiles.index()
GET     /media/files/:checksum      		controllers.MediaFiles.show(checksum)
GET     /media/stats/folders        		controllers.MediaFiles.folderStats()
GET     /media/thumbnails/:checksum/:index  controllers.MediaFiles.thumbnail(checksum: String, index: Integer)
GET     /media/downloads/:checksum  		controllers.MediaFiles.download(checksum)
GET		/tags								controllers.Tags.index()
GET		/tags/:tagName						controllers.Tags.show(tagName)
POST	/jobs/:jobname						controllers.Jobs.toggleJobActive(jobname)
POST	/jobs								controllers.Jobs.toggleJobsActive()

GET 	/admin								controllers.admin.Dashboard.index()

# Map static resources from the /public folder to the /assets URL path
GET  	/assets/*file  				controllers.Assets.versioned(path="/public", file: Asset)
